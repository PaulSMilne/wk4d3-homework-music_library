<h2><%= @artist.name %></h2>

<h3>Albums</h3>

<ul>
<% @albums.each do |album| %>
<li><a href="/albums/<%=album.id%>"><%=album.name%></a></li>
<% end %>
</ul>

<p><span class="small"><a href="/artists/<%= @artist.id %>/edit">Update this artist</a></span></p>
<form action="/artists/<%= @artist.id %>" method="post">
    <input type="submit" value="Delete">
    <input type="hidden" name="_method" value="delete">
</form>
